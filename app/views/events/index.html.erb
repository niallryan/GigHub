<div class="page-header">
  <h1>Events</h1>
</div>

<%= link_to "Create A New Event", new_event_path, class: "btn btn-success" %>

<%= @events.each do |event| %>
    <div class="status">
        <div class="row">
            <div class="span8">
                <strong><%= event.name %></strong>
                <p><%= event.content %></p>
                <div class="meta">
                    <%= link_to time_ago_in_words(event.created_at) + " ago", event %> |
                    <span class="admin">
                        <%= link_to "Show", event_path(event) %> |
                        <%= link_to "Edit", edit_event_path(event) %> |
                        <%= link_to "Delete", event, method: :delete, data: { confirm: "Are you sure you want to delete this event?"} %>
                    </span>
                </div>
            </div>
        </div>
    </div>
<% end %>